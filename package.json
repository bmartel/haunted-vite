{
  "name": "haunted-vite",
  "private": true,
  "version": "0.0.0",
  "main": "dist/index.html",
  "exports": {
    ".": "./dist/haunted-vite.es.js"
  },
  "types": "./dist/haunted-vite.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix src",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "test": "web-test-runner \"src/**/*.spec.ts\" --node-resolve",
    "test:watch": "web-test-runner \"src/**/*.spec.ts\" --node-resolve --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@martel/haunted-router": "^0.4.0",
    "haunted": "^4.8.3",
    "lit-html": "^1.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/test-runner": "^0.13.18",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "26.0.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "typescript": "^4.5.4",
    "vite": "^2.9.5",
    "vite-plugin-pwa": "^0.12.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
